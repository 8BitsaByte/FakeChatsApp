<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="No screenshots available"
        android:visibility="gone"
        android:id="@+id/DisplayScreenshotsNoScreenshotsTV"
        android:textColor="#CCCCCC"
        android:layout_marginTop="15dp"
        android:textSize="15dp"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FullViewRefresh"
        android:layout_gravity="center_horizontal"
        >
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/DisplayScreenshotsRecyclerView"
        android:scrollbars="vertical"
        android:background="@null"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        />
    </android.support.v4.widget.SwipeRefreshLayout>
    <android.support.v7.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/CardView"
        app:cardCornerRadius="25dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardElevation="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        >
        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/DisplayScreenshotsAddScreenshot"
            android:scaleType="fitXY"
            android:padding="20dp"
            android:layout_gravity="center"
            android:background="@color/grayShade"
            android:src="@drawable/plus_white"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ProgressBarCardView"
        app:cardCornerRadius="20dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardElevation="0dp"
        android:layout_centerInParent="true"
        >
    <ProgressBar
        android:id="@+id/DisplayScreenshotsProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/progress_bar"
        android:padding="10dp"
        android:background="@color/grayShade"
        >
    </ProgressBar>
    </android.support.v7.widget.CardView>

</RelativeLayout>