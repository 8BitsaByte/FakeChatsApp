<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/DisplaySingleScreenshotViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="4"
        android:id="@+id/DisplaySingleScreenshotFooterLL"
        android:background="#80000000">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/DisplaySingleScreenshotBackButton"
                android:layout_centerInParent="true"
                android:src="@drawable/leftarrow_white"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:background="@null"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/DisplaySingleScreenshotHideFooter"
                android:layout_centerInParent="true"
                android:src="@drawable/hideeye_white"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:background="@null"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/DisplaySingleScreenshotShareButton"
                android:layout_centerInParent="true"
                android:src="@drawable/share_white"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:background="@null"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/DisplaySingleScreenshotDeleteButton"
                android:layout_centerInParent="true"
                android:src="@drawable/trashcan_white"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:background="@null"/>
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/DisplaySingleScreenShotShowFooterRL"
        android:background="@null"
        android:visibility="gone">


    </RelativeLayout>
</RelativeLayout>