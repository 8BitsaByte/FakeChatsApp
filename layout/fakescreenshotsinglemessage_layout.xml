<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:id="@+id/CreateFakeScreenshotsSingleMessageMainRL">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FakeScreenshotSingleMessageFriendRL"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:layout_marginRight="30dp"
        android:visibility="gone">



        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:id="@+id/FakeScreenshotSingleMessageFriendImage"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:padding="2dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FakeScreenshotSingleMessageFriendText"
            android:textColor="@color/facebookFriendTextColor"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:layout_toRightOf="@id/FakeScreenshotSingleMessageFriendImage"
            android:layout_centerVertical="true"
            android:background="@null"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FakeScreenshotSingleMessageUserRL"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:layout_marginLeft="70dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FakeScreenshotSingleMessageUserText"
            android:textColor="@color/facebookUserTextColor"
            android:textSize="15dp"
            android:background="@null"
            />

    </RelativeLayout>




</RelativeLayout>